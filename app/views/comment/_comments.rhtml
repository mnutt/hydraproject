<center>

<% if current_user -%>	
  <%= render :partial => 'comment/comment_form', :locals => {:torrent => torrent} %>
<% else -%>
  <p><%= link_to "Log in", login_path -%> to comment</p>
<% end -%>

<% if !comments.empty? %>
	<br/>
	<% comments.each do |comment| %>
		<table class="comment">
				<tr>
					<td class="comment_author">
							<div class="comment_author_inner">
							<%= comment.user.login %>:<br/>
							<div class="comment_date"><%= comment.created_at.nice_print %></div>
						</div>
					</td>
					<td class="comment_area">
						<%= h comment.comment %>
					</td>
				</tr>
		</table>
	<% end %>
	<div style="margin-top: 10px;"><small><%= will_paginate(comments, {:prev_label => '&laquo; Previous', :next_label => 'Next Comments &raquo;'}) %></small></div>
<% end %>
</center>
