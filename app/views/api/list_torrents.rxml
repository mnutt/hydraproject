xml.torrents do
  @torrents.each do |t|
    xml.torrent do 
      xml.info_hash t.info_hash
      xml.name t.name.escape_xml
      xml.filename t.filename.escape_xml
      xml.category t.category ? t.category.name.escape_xml : ''
      xml << "<description><![CDATA[#{t.description.gsub(']]>', '') if t.description}]]></description>"
    end
  end
end
